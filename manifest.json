{
    "name": "Google Times Counter",
    "version": "0.1",
    "description": "Remember times of Google",
    "manifest_version": 2,
    "permissions": ["storage", "tabs"],
    "options_page": "options.html",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup_window.html"
    },
    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["content.js"]
        }
    ]
}